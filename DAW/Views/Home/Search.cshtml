@model IEnumerable<DAW.Data.Entities.Product>
@{
    ViewData["Title"] = "Search";
}
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            @Html.Partial("Filters");
        </div>
        <div class="col-lg-9">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-2">
                        <div class="card">
                            <img class="card-img-top" src="http://placehold.it/700x400" alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title">@Html.DisplayFor(modelItem => item.AlbumTitle)</h4>
                                <h5>@Html.DisplayFor(modelItem => item.Price)</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Title)</h6>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.AlbumDescription)</p>
                            </div>
                            <div class="card-footer">
                                <a asp-action="Buy" asp-route-id="@item.Id" class="btn btn-primary">Buy</a>
                                <p class="card-text" style="display:inline-block; margin-left: 5px">
                                    <span style="font-weight:bold">Genre: @Html.DisplayFor(modelItem => item.Gender)</span>
                                </p>
                                @*<a asp-action="AddToWishlist" asp-route-id="@item.Id" href="#" class="card-text" style="display:inline-block; margin-left: 5px">
                                        <span style="font-weight:bold">Add to wishlist</span>
                                    </a>*@
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>

</div>